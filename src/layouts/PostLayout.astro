---
import { formattedDate } from "../constants/dates";
import PageLayout from "./PageLayout.astro";

const { frontmatter } = Astro.props;
const formattedPublishedDate = formattedDate(frontmatter.published_date);
---

<PageLayout subtitle={frontmatter.title}>
  <div class="container">
    <div>
      <p><strong>author</strong>: {frontmatter.author}</p>
      <p>
        <strong>published date</strong>: {formattedPublishedDate}
      </p>
      <p><em>{frontmatter.description}</em></p>
    </div>
    <hr />
    <div class="content-container">
      <slot />
    </div>
  </div>
</PageLayout>

<style>
  .container {
    max-width: 600px;
    font-size: 1.2em;
  }
  .content-container {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding-bottom: 40px;
  }
  p {
    margin-top: 10px;
  }
  hr {
    margin: 10px 0;
  }
  h2 {
    font-size: 1.8em;
  }
</style>
