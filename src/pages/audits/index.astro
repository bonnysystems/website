---
import { getCollection } from "astro:content";
import PageLayout from "../../layouts/PageLayout.astro";
const allPosts = await getCollection("audits");
---

<PageLayout subtitle="audits">
  <p>these are all of bonny systems' audits:</p>
  <ul>
    {
      allPosts.map((post) => (
        <li>
          {post.data.name} (
          <a href={`/audits/preliminary/${post.id}`}>preliminary</a>)
        </li>
      ))
    }
  </ul>
</PageLayout>

<style>
  ul {
    padding: 10px 20px;
  }
</style>
